@model IEnumerable<ContaBancariaMVC.Models.ContaBancaria>

@{
    ViewData["Title"] = "Contas Bancárias";
}

<h2>Contas Bancárias</h2>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Conta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número da Conta</th>
            <th>Titular</th>
            <th>Saldo</th>
            <th>Data de Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NumeroConta</td>
                <td>@item.Titular</td>
                <td>@item.Saldo.ToString("C")</td>
                <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Deposito" asp-route-id="@item.Id" class="btn btn-success btn-sm">Depósito</a>
                    <a asp-action="Saque" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Saque</a>
                </td>
            </tr>
        }
    </tbody>
</table>
