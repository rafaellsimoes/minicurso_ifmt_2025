@model ContaBancariaMVC.Models.ContaBancaria

@{
    ViewData["Title"] = "Nova Conta";
}

<h2>Nova Conta Banc√°ria</h2>

<form asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="NumeroConta" class="form-label"></label>
                <input asp-for="NumeroConta" class="form-control" />
                <span asp-validation-for="NumeroConta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Titular" class="form-label"></label>
                <input asp-for="Titular" class="form-control" />
                <span asp-validation-for="Titular" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Saldo" class="form-label"></label>
                <input asp-for="Saldo" class="form-control" />
                <span asp-validation-for="Saldo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
